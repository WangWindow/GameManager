{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "gamemanager",
  "version": "0.3.1",
  "identifier": "com.choco.gamemanager",
  "build": {
    "removeUnusedCommands": true,
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:12490",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "gamemanager",
        "width": 800,
        "height": 600,
        "minWidth": 400,
        "minHeight": 300,
        "decorations": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPDATA/**",
          "$HOME/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
